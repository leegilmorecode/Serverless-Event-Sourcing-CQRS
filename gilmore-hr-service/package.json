{
  "name": "gilmore-hr-service",
  "version": "0.1.0",
  "bin": {
    "gilmore-hr-service": "bin/gilmore-hr-service.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "POWERTOOLS_DEV=true jest --silent",
    "test:watch": "POWERTOOLS_DEV=true jest --watch --silent",
    "deploy": "cdk deploy --profile=default --all",
    "deploy:hot": "cdk deploy --profile=default --all --hotswap",
    "remove": "cdk destroy --profile=default --all",
    "synth": "cdk synth --profile=default --all"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.137",
    "@types/jest": "^29.5.12",
    "@types/node": "20.11.30",
    "@types/uuid": "^9.0.8",
    "aws-cdk": "2.136.0",
    "esbuild": "^0.20.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.3"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^2.0.3",
    "@aws-lambda-powertools/metrics": "^2.0.3",
    "@aws-lambda-powertools/tracer": "^2.0.3",
    "@aws-sdk/client-dynamodb": "^3.556.0",
    "@aws-sdk/util-dynamodb": "^3.556.0",
    "@middy/core": "^5.3.2",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "aws-cdk-lib": "2.136.0",
    "constructs": "^10.0.0",
    "convict": "^6.2.4",
    "source-map-support": "^0.5.21",
    "uuid": "^9.0.1"
  }
}
